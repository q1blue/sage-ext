{
  "name": "code-guru",
  "displayName": "code-guru",
  "description": "AI to help developers",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "repository": {
    "url": "https://github.com/thiagoadsix/code-guru-ext"
  },
  "publisher": "CodeGuru",
  "contributes": {
    "commands": [
      {
        "command": "codeguru.refactorCode",
        "title": "CodeGuru: refactor code"
      },
      {
        "command": "codeguru.generateDoc",
        "title": "CodeGuru: generate documentation"
      },
      {
        "command": "codeguru.analyzeBug",
        "title": "CodeGuru: analyze bug"
      },
      {
        "command": "codeguru.generateTests",
        "title": "CodeGuru: generate tests"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codeguru.refactorCode",
          "when": "editorHasSelection"
        },
        {
          "command": "codeguru.generateDoc",
          "when": "editorHasSelection"
        },
        {
          "command": "codeguru.analyzeBug",
          "when": "editorHasSelection"
        },
        {
          "command": "codeguru.generateTests",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.0.1"
  }
}